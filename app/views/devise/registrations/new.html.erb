<div class="devise">
  <img src="/banner.png" class="login-banner"/>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form-group') do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password (min. 6 characters)', class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Password confirmation', class: 'form-control' %>
  </div>

    <% if devise_mapping.rememberable? -%>
      <div class="field container-fluid">
        <div class="login-button p-a-0">
          <button class="btn" type="submit" name="commit" value="Sign up" data-disable-with="Sign up">Sign up</button>
        </div>
      </div>
    <% end -%>

    <div class="actions">
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>

